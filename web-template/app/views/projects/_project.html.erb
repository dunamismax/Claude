<article id="<%= dom_id(project) %>" class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
  <div class="flex flex-wrap items-start justify-between gap-3">
    <div class="space-y-1">
      <h2 class="text-lg font-semibold text-slate-900"><%= link_to project.name, project_path(project), class: "hover:text-sky-700" %></h2>
      <p class="text-sm text-slate-600"><%= project.summary.presence || "No summary" %></p>
      <p class="text-xs font-medium uppercase tracking-wide text-slate-500"><%= project.status %></p>
    </div>
    <div class="flex items-center gap-2 text-sm">
      <%= link_to "Edit", edit_project_path(project), class: "rounded-md border border-slate-300 px-3 py-1.5 text-slate-700 hover:bg-slate-100" %>
      <%= button_to "Delete", project_path(project), method: :delete, class: "rounded-md border border-rose-300 px-3 py-1.5 text-rose-700 hover:bg-rose-50", data: { turbo_confirm: "Delete project?" } %>
    </div>
  </div>
</article>
