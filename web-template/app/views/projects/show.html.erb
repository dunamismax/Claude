<% content_for :title, @project.name %>

<section class="space-y-6">
  <header class="flex flex-wrap items-start justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900"><%= @project.name %></h1>
      <p class="text-sm text-slate-500">Status: <%= @project.status.humanize %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "Edit", edit_project_path(@project), class: "rounded-md border border-slate-300 px-3 py-1.5 text-sm text-slate-700 hover:bg-slate-100" %>
      <%= button_to "Delete", @project, method: :delete, class: "rounded-md border border-rose-300 px-3 py-1.5 text-sm text-rose-700 hover:bg-rose-50", data: { turbo_confirm: "Delete project?" } %>
    </div>
  </header>

  <article class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-medium uppercase tracking-wide text-slate-500">Summary</h2>
    <p class="mt-2 whitespace-pre-wrap text-slate-700"><%= @project.summary.presence || "No summary" %></p>
  </article>

  <%= link_to "Back to projects", projects_path, class: "text-sm font-medium text-sky-700 hover:text-sky-600" %>
</section>
