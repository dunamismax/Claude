NODE_ENV=development
APP_URL=http://localhost:3000
PORT=3000

# PostgreSQL (infra defaults from repo root)
DATABASE_URL=postgres://scryai:scryai@localhost:15432/scryai

# Better Auth
BETTER_AUTH_SECRET=change-this-secret-to-at-least-32-characters
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000
# Optional cookie sharing across subdomains, e.g. .example.com
# SESSION_COOKIE_DOMAIN=

# MinIO
MINIO_ENDPOINT=http://localhost:19000
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=scryai-documents
MAX_UPLOAD_BYTES=10485760

# pg-boss
ENABLE_JOBS=false
PG_BOSS_SCHEMA=pgboss

# Optional one-time admin promotion by seed script
# BOOTSTRAP_ADMIN_EMAIL=admin@example.com
