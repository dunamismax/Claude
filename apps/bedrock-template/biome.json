{
  "$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "useQwikValidLexicalScope": "off"
          }
        }
      }
    }
  ],
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
