{
  "name": "scrybase",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev --port 3000",
    "build": "react-router build",
    "start": "bun run ./server.ts",
    "typecheck": "react-router typegen && tsc --noEmit",
    "lint": "bunx @biomejs/biome check app scripts server.ts react-router.config.ts vite.config.ts",
    "format": "bunx @biomejs/biome format --write app scripts server.ts react-router.config.ts vite.config.ts",
    "test": "bun test",
    "db:migrate": "bun run scripts/migrate.ts",
    "jobs:worker": "bun run scripts/worker.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@react-router/node": "^7.13.0",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.35",
    "lucide-react": "^0.542.0",
    "pg-boss": "^10.1.6",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.12.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@react-router/dev": "^7.12.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.3.9",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
