{
  "name": "scryai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "scry:bootstrap": "bun run scripts/cli.ts bootstrap",
    "scry:doctor": "bun run scripts/cli.ts doctor",
    "scry:setup:workstation": "bun run scripts/cli.ts setup:workstation",
    "scry:setup:ssh_backup": "bun run scripts/cli.ts setup:ssh_backup",
    "scry:setup:ssh_restore": "bun run scripts/cli.ts setup:ssh_restore",
    "scry:setup:storage": "bun run scripts/cli.ts setup:storage",
    "scry:projects:list": "bun run scripts/cli.ts projects:list",
    "scry:projects:doctor": "bun run scripts/cli.ts projects:doctor",
    "scry:projects:install": "bun run scripts/cli.ts projects:install",
    "scry:projects:verify": "bun run scripts/cli.ts projects:verify"
  },
  "dependencies": {
    "@auth/core": "^0.41.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "next": "^15.5.6",
    "next-auth": "^5.0.0-beta.30",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  }
}
